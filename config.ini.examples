# Example configurations for different setups

# ===== EXAMPLE 1: Using hostnames =====
[nodes]
other_nodes = node1,node2,node3
port = 5000
stats_interval = 1

[display]
# Update interval in seconds
update_interval = 5

# Screen rotation interval (seconds) - time on each screen before switching
screen_rotation_interval = 10

# SPI display configuration
spi_port = 0
spi_device = 0
dc_pin = 24
reset_pin = 25
cs_pin = 8
width = 128
height = 64
type = SSD1306
baudrate = 8000000
external_vcc = false

